// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  id    Int     @id @default(autoincrement())
  name  String?
  nick_name String @unique
  runActivities RunActivity[]
  bikeActivities BikeActivity[]
  coldBaths ColdBaths[]
}


model RunActivity {
  id  Int @id @default(autoincrement())
  userId Int
  user User @relation(fields: [userId], references: [id])
  dateTime DateTime
  title String
  totalTime String?
  description String?
  distance Float
  shoes String?
  runType String
}

model BikeActivity {
  id  Int @id @default(autoincrement())
  userId Int
  user User @relation(fields: [userId], references: [id])
  dateTime DateTime
  title String
  totalTime String?
  description String?
  distance Float
  bikeType String?
  rideType  String?
}

model ColdBaths {
  id  Int @id @default(autoincrement())
  userId Int
  user User @relation(fields: [userId], references: [id])
  dateTime DateTime
  totalTime String?
  type ColdBathType
  description String?
  distance Float?
}

enum ColdBathType {
  SWIM
  BATH
}